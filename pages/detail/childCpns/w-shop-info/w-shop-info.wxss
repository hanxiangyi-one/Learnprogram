/* pages/detail/childCpns/w-shop-info/w-shop-info.wxss */
.shop-info{
  margin-top: 10rpx;
  font-size: 32rpx;
}
.title-info{
  margin-top:30rpx;
}
.title-info image{
   height: 80rpx;
   width: 80rpx;
   border-radius: 46rpx;
   border: 1px solid rgba(200,200,200,.6);
   vertical-align: middle;
   margin-left: 18rpx;
}
.title-info text{
  position: relative;
  top: 6rpx;
  margin-left: 18rpx;
}

.sells-info{
  display: flex;
  margin: 40rpx 0;
}
.count-info{
  display: flex;
  margin: 20rpx 0;
  border-right: 1px solid rgba(200,200,200,.6);
}
.sell-item{
  flex: 1;
  text-align: center;
}
.count-item{
  flex: 1;
  text-align: center;
}

grade-info {
 
  padding: 0 20rpx;
  
}


.grade-row {
  display: flex;
  margin-left: 60rpx;
  
}

.grade-row .item {
  margin-top: 8rpx;
}

 item.name {
  width: 200rpx;

}

.grade-row .score {
  flex: 1;
 
}

.grade-row .better {
  flex: 1;
  
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}

.entrance {
  text-align: center;
}

.entrance button::after {
  border: none;
}

.entrance button {
  padding: 8rpx 100rpx;
}