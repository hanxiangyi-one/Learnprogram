/* pages/detail/childCpns/w-param-info/w-param-info.wxss */
.param-info{
  margin-top: 20rpx;
  padding: 40rpx 30rpx;
  font-size: 30rpx;
  border-bottom: 12rpx solid #f2f2f2;
}

.row{
  display: flex;
  height: 84rpx;
  line-height: 84rpx; 
  border-bottom: 1px solid #f2f2f2;
}
.param-item{
  flex:1;
  margin-right: 42rpx;
}

.info-item{
  display: flex;
}

.info-item .key{
  width: 160rpx;
}

.info-item .value{
  flex: 1;
  color: #f57777;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}