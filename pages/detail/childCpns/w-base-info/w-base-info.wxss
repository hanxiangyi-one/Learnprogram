  border-bottom: 5rpx solid #f2f2f2;
}
.conlumns-text{
  text-align: center;

}
.services{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 30rpx 0;
  line-height: 60rpx;
}
.services .icon{
  height: 32rpx;
  width: 32rpx;
  position: relative;
  top: 2rpx;
  right: 6rpx;
  margin-left: 5rpx;
}
.services-item{
  text-align: center;
}