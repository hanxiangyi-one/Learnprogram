.base-info{
  margin-top: 10rpx;
  padding: 15rpx;
  border-bottom: 10rpx solid #f2f2f2;
}
.title{
  font-size: 40rpx;
}
.base-price{
  margin-top: 15rpx;
}
.newPrice{
  color: #f57777;
  font-size: 45rpx;
  margin-left: 10rpx;
}
.oldPrice{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}
